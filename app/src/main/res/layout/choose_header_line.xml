<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <CheckBox
        android:id="@+id/headerSelectCheckbox"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/headerSelectName"
        app:layout_constraintBottom_toBottomOf="@id/headerSelectName"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginHorizontal="0dp"
        >
    </CheckBox>

    <TextView
        android:id="@+id/headerSelectName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/error_placeholder"
        android:textAlignment="textStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/headerSelectCheckbox"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginHorizontal="5dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>