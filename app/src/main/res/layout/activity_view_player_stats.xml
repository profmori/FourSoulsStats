<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewPlayerStats">

    <ImageView
        android:id="@+id/background"

        android:layout_width="match_parent"
        android:layout_height="match_parent"

        tools:ignore="ContentDescription"

        android:background="@drawable/bg_tiled_loot_back"

        android:src="@drawable/bg_border_soul_back"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/playerStatsTitle"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="30dp"

        android:text="@string/player_stats_title"
        android:fontFamily="@font/four_souls_title"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/filtersHeader"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/playerStatsTitle"
        android:layout_margin="20dp"

        android:text="@string/player_stats_filter"/>

    <com.google.android.material.slider.RangeSlider
        android:id="@+id/playerSlider"

        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/treasureSlider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:stepSize="1.0"
        android:valueFrom="0.0"
        android:valueTo="10.0"
        app:values="@array/temp_slider"/>

    <com.google.android.material.slider.RangeSlider
        android:id="@+id/treasureSlider"

        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/playerSlider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:stepSize="1.0"
        android:valueFrom="0.0"
        android:valueTo="10.0"
        app:values="@array/temp_slider" />

    <de.codecrafters.tableview.SortableTableView
        android:id="@+id/playerTable"

        android:layout_width="340dp"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/treasureSlider"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginVertical="30dp"
        android:layout_marginHorizontal="35dp"

        android:divider="@color/darker"
        android:dividerHeight="1dp" />

</androidx.constraintlayout.widget.ConstraintLayout>