<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".enterData">

    <ImageView
        android:id="@+id/charImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="0.5"
        android:contentDescription="Character Card"
        android:adjustViewBounds="true"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingVertical="10dp"
        android:paddingHorizontal="10dp"
        tools:src="@drawable/blank_char"/>

    <Spinner
        android:id="@+id/charSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/charImage"
        app:layout_constraintBottom_toBottomOf="@id/charImage"
        app:layout_constraintStart_toStartOf="@id/charImage"
        app:layout_constraintEnd_toEndOf="@id/charImage" />

    <Button
        android:id="@+id/message_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/charImage"
        app:layout_constraintBottom_toBottomOf="@id/charImage"
        app:layout_constraintStart_toStartOf="@id/charImage"
        app:layout_constraintEnd_toEndOf="@id/charImage"
        app:layout_constraintVertical_bias="0.7" />


</androidx.constraintlayout.widget.ConstraintLayout>