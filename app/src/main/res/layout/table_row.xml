<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/lighter">

    <TextView
        android:id="@+id/cell1Text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/error_placeholder"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/cell2Text"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/separatorLine"/>
    <TextView
        android:id="@+id/cell2Text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/error_placeholder"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@id/cell1Text"
        app:layout_constraintEnd_toStartOf="@id/cell3Text"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/separatorLine"/>
    <TextView
        android:id="@+id/cell3Text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/error_placeholder"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@id/cell2Text"
        app:layout_constraintEnd_toStartOf="@id/cell4Text"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/separatorLine"/>
    <TextView
        android:id="@+id/cell4Text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/error_placeholder"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@id/cell3Text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/separatorLine"/>

    <View
        android:id="@+id/separatorLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>