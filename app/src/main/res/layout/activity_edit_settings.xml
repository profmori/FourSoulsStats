<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:focusable="true"
    android:focusableInTouchMode ="true"

    tools:context=".EditSettings">

    <ImageView
        android:id="@+id/background"

        android:layout_width="match_parent"
        android:layout_height="match_parent"

        tools:ignore="ContentDescription"

        android:background="@drawable/bg_tiled_loot_back"

        android:src="@drawable/bg_border_monster_back"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/settingsTitle"

        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_margin="35dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:text="@string/settings_title"
        android:fontFamily="@font/four_souls_title"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/groupIDPrompt"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="35dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/groupIDExplanation"
        app:layout_constraintBottom_toBottomOf="@id/groupIDExplanation"

        android:text="@string/settings_group_id"/>

    <EditText
        android:id="@+id/groupIDEntry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintStart_toEndOf="@id/groupIDPrompt"
        app:layout_constraintTop_toTopOf="@id/groupIDExplanation"
        app:layout_constraintBottom_toBottomOf="@id/groupIDExplanation"
        android:layout_marginHorizontal="10dp"

        android:ems="4"
        android:maxLength="6"
        android:imeOptions="actionDone"

        android:background="@drawable/number_rectangle"
        android:textAlignment="center"
        android:inputType="textCapCharacters"
        android:importantForAutofill="no"
        tools:ignore="LabelFor" />

    <TextView
        android:id="@+id/groupIDExplanation"

        android:layout_width="0dp"
        android:layout_height="75dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintStart_toEndOf="@id/groupIDEntry"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/settingsTitle"
        android:layout_marginTop="5dp"

        android:text="@string/settings_group_id_explain"/>

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/onlineSwitch"

        android:layout_width="wrap_content"
        android:layout_height="45dp"

        app:layout_constraintTop_toBottomOf="@id/groupIDExplanation"
        app:layout_constraintBottom_toTopOf="@id/editionSelect"
        android:layout_marginStart="35dp"
        app:layout_constraintStart_toStartOf="parent"

        app:switchPadding="20dp"
        android:thumb="@drawable/switch_thumb"
        app:trackTint="@drawable/switch_track"

        android:text="@string/settings_online_sync"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/editionSelect"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/onlineSwitch"
        app:layout_constraintBottom_toTopOf="@id/altSwitch"
        android:layout_marginVertical="5dp">

        <TextView
            android:id="@+id/settingsEditionPrompt"

            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginHorizontal="35dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            android:text="@string/edition_prompt"/>

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/goldSwitch"

            android:layout_width="wrap_content"
            android:layout_height="45dp"
            app:layout_constraintTop_toBottomOf="@id/settingsEditionPrompt"
            app:layout_constraintBottom_toTopOf="@id/requiemSwitch"
            app:layout_constraintStart_toStartOf="@id/settingsEditionPrompt"
            android:layout_marginStart="10dp"
            
            android:thumb="@drawable/switch_thumb"
            app:trackTint="@drawable/switch_track"

            android:text="@string/settings_gold" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/plusSwitch"

            android:layout_width="wrap_content"
            android:layout_height="45dp"
            app:layout_constraintTop_toTopOf="@id/goldSwitch"
            app:layout_constraintStart_toEndOf="@id/goldSwitch"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="30dp"

            android:thumb="@drawable/switch_thumb"
            app:trackTint="@drawable/switch_track"

            android:text="@string/settings_plus" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/requiemSwitch"

            android:layout_width="wrap_content"
            android:layout_height="45dp"
            app:layout_constraintTop_toBottomOf="@id/goldSwitch"
            app:layout_constraintBottom_toTopOf="@id/promoSwitch"
            app:layout_constraintEnd_toEndOf="@id/goldSwitch"
            
            android:thumb="@drawable/switch_thumb"
            app:trackTint="@drawable/switch_track"

            android:text="@string/settings_requiem" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/warpSwitch"

            android:layout_width="wrap_content"
            android:layout_height="45dp"
            app:layout_constraintTop_toTopOf="@id/requiemSwitch"
            app:layout_constraintEnd_toEndOf="@id/plusSwitch"

            android:thumb="@drawable/switch_thumb"
            app:trackTint="@drawable/switch_track"

            android:text="@string/settings_warp" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/promoSwitch"

            android:layout_width="wrap_content"
            android:layout_height="45dp"
            app:layout_constraintTop_toBottomOf="@id/requiemSwitch"
            app:layout_constraintEnd_toEndOf="@id/goldSwitch"

            
            android:thumb="@drawable/switch_thumb"
            app:trackTint="@drawable/switch_track"

            android:text="@string/settings_promo" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/customSwitch"

            android:layout_width="wrap_content"
            android:layout_height="45dp"
            app:layout_constraintTop_toBottomOf="@id/requiemSwitch"
            app:layout_constraintEnd_toEndOf="@id/plusSwitch"

            
            android:thumb="@drawable/switch_thumb"
            app:trackTint="@drawable/switch_track"

            android:text="@string/settings_custom" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/customButton"

            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            app:layout_constraintTop_toBottomOf="@id/customSwitch"
            android:layout_marginVertical="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="30dp"

            android:background="@drawable/button_event"

            android:textAllCaps="false"
            android:text="@string/settings_enter_custom"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/altSwitch"

        android:layout_width="wrap_content"
        android:layout_height="45dp"
        app:layout_constraintTop_toBottomOf="@id/editionSelect"
        app:layout_constraintBottom_toTopOf="@id/backgroundGroup"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginHorizontal="40dp"

        app:switchPadding="20dp"
        android:thumb="@drawable/switch_thumb"
        app:trackTint="@drawable/switch_track"

        android:text="@string/settings_alt_art" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/backgroundGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/altSwitch"
        app:layout_constraintBottom_toTopOf="@id/readableSwitch">

        <TextView
            android:id="@+id/borderPrompt"

            android:layout_width="wrap_content"
            android:layout_height="30dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginHorizontal="40dp"
            app:layout_constraintTop_toTopOf="parent"

            android:text="@string/settings_border_prompt"/>

        <Spinner
            android:id="@+id/borderSpinner"

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/borderPrompt"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="@id/borderPrompt"
            app:layout_constraintBottom_toBottomOf="@id/borderPrompt"

            android:gravity="start"

            style="@style/Widget.AppCompat.Spinner.DropDown"
            android:dropDownHeight="60sp"
            android:dropDownVerticalOffset="20dp"/>

        <TextView
            android:id="@+id/backgroundPrompt"

            android:layout_width="wrap_content"
            android:layout_height="30dp"
            app:layout_constraintStart_toStartOf="@id/borderPrompt"
            app:layout_constraintTop_toBottomOf="@id/borderPrompt"
            android:layout_marginTop="10dp"

            android:text="@string/settings_background_prompt"/>

        <Spinner
            android:id="@+id/backgroundSpinner"

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/backgroundPrompt"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="@id/backgroundPrompt"
            app:layout_constraintBottom_toBottomOf="@id/backgroundPrompt"

            android:gravity="start"

            style="@style/Widget.AppCompat.Spinner.DropDown"
            android:dropDownHeight="60sp"
            android:dropDownVerticalOffset="20dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/readableSwitch"

        android:layout_width="wrap_content"
        android:layout_height="45dp"
        app:layout_constraintTop_toBottomOf="@id/backgroundGroup"
        app:layout_constraintBottom_toTopOf="@id/settingsMainButton"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginHorizontal="35dp"
        android:layout_marginBottom="5dp"

        app:switchPadding="20dp"
        android:thumb="@drawable/switch_thumb"
            app:trackTint="@drawable/switch_track"

        android:fontFamily="@font/atkinson_hyperlegible_regular"
        android:text="@string/settings_readable_font" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/settingsMainButton"

        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_margin="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:textAllCaps="false"
        android:text="@string/back_to_main_1"/>

</androidx.constraintlayout.widget.ConstraintLayout>