<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FourSoulsStatistics" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/grey</item>
        <item name="colorPrimaryVariant">@color/clear</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Add Custom Font As Default -->
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>

        <!-- Make the app full screen, so backgrounds are behind the action bar -->
        <item name="android:windowFullscreen">true</item>


    </style>
</resources>