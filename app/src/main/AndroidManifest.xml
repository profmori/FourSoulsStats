<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:fullBackupOnly="true"
        android:icon="@mipmap/launcher_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/launcher_icon_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FourSoulsStatistics">
        <activity
            android:name=".statistics_pages.ViewStatisticsPage"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".FeedbackPage"
            android:exported="true" />
        <activity
            android:name=".EditSingleGame"
            android:configChanges="orientation"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".EditGames"
            android:configChanges="orientation"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".CustomCardEntry"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".RerollPrefSelect"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ShowThanks"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".EditSettings"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".statistics_pages.StatisticsMenu"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".EnterResult"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".EnterData"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".MainActivity"
            android:configChanges="orientation"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>