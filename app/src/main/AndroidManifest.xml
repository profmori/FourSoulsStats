<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.profmori.foursoulsstatistics">

    <application
        android:icon="@mipmap/launcher_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/launcher_icon_round"
        android:supportsRtl="true"
        android:allowBackup="true"
        android:fullBackupOnly="true"
        android:theme="@style/Theme.FourSoulsStatistics">
        <activity android:name=".CustomCardEntry"/>
        <activity android:name=".ViewPlayerStats" />
        <activity android:name=".ShowThanks" />
        <activity
            android:name=".EditSettings"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".ViewStatistics" />
        <activity
            android:name=".EnterResult"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".EnterData"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".MainActivity"
            android:exported="false">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>